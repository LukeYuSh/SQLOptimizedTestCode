<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.dao.CourseDao">

    <resultMap id="dataMap" type="com.test.entity.Course">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="coach_id" property="coachId"/>
        <result column="kind" property="kind"/>
        <result column="duration" property="duration"/>
        <result column="image" property="image"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <insert id="batchInsertCourse" parameterType="com.test.entity.Course">
        INSERT INTO course(`name`, `coach_id`,`kind`, `duration`, `image`, `create_time`, `update_time`)VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.name},#{item.coachId},#{item.kind},#{item.duration},#{item.image},now(),now())
        </foreach>
    </insert>

</mapper>